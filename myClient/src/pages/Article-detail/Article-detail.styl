.head {
    color: gray;
    width: 100%;
    max-width: 100%;
    margin-bottom: 10px;
    text-align: center;
    background-color: #f5f5f5;
    -webkit-box-shadow: 0 1px 2px rgba(0, 0, 0, 1);
    box-shadow: 0 0 0 rgba(0, 0, 0, 1);
    display: -wbekit-flex;
    display: flex;
    /* flex-flow nowrap row */
    z-index: 1;
    overflow: hidden;
    margin: 0;
    padding: 0;
}

p {
    width: 100px;
    font-size: 20px;
    padding: 12px 0;
    margin: 0 auto;
}

.header-close {
    float: left;
    width: 1.5rem;
    height: 2rem;
    margin: 0.5rem;
}

.right {
    float: right;
    padding: 12px;
}

.card-header {
    display: flex;

    .header-bg {
        background-image: url('../../../static/img/card-header-bg-headline.png');
        width: 100%;
        height: 60px;
        background-repeat: no-repeat;
        background-position: top right;
        background-size: 100% auto;
        position: absolute;
        top: -4px;
        left: 0;
    }

    .avatar {
        margin: 0.75rem 0 0.5rem 0.75rem;
        display: flex;
        position: relative;

    .avatar-img {
            width: 2.125rem;
            height: 2.125rem;
            border-radius: 50%;
            vertical-align: top;
            display: block;
        }

        .no-verified {
            display: none;
        }

        .icon-yellow-v, .icon-blue-v {
            position: absolute;
            right: -0.125rem;
            bottom: -0.125rem;
        }
    }
}
